# Environment variables for production deployment
# Copy this file to .env and update the values

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-password
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=your-secure-admin-password

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your-secure-minio-password
MINIO_BUCKET_NAME=process-documents

# Application Configuration
JWT_SECRET=your-super-secret-jwt-key
NEXTAUTH_SECRET=your-super-secret-nextauth-key
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration (SMTP)
SMTP_HOST=your-smtp-host.com
SMTP_PORT=465
SMTP_USERNAME=your-email@domain.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=Process Manager <noreply@yourdomain.com>

# Email Configuration (Brevo API - Preferred for Production)
BREVO_KEY=your-brevo-api-key

# URLs
FRONTEND_URL=https://yourdomain.com
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
UPLOAD_BASE_URL=https://yourdomain.com/files

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your-firebase-vapid-key

# Application Settings
LOG_LEVEL=info
DEVELOPMENT_MODE=false
NEXT_PUBLIC_APP_NAME=Process Manager
