FROM golang:1.23-alpine

# Install Air for hot-reload (use v1.49.0 which is stable with Go 1.23)
RUN go install github.com/cosmtrek/air@v1.49.0

# Set working directory
WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code (will be overridden by volume mount)
COPY . .

# Create tmp directory for Air builds
RUN mkdir -p ./tmp

# Expose port
EXPOSE 8080

# Run Air for hot-reload
CMD ["air", "-c", ".air.toml"]
