FROM golang:1.24-alpine

# Install dependencies for chromedp (Chromium, necessary libraries)
RUN apk add --no-cache \
    chromium \
    nss \
    freetype \
    harfbuzz \
    ca-certificates \
    ttf-freefont

# Install Air for hot-reload (using air-verse path)
RUN go install github.com/air-verse/air@v1.52.3

# Set working directory
WORKDIR /app

# Set environment variable for chromedp to use system chromium
ENV CHROME_BIN=/usr/bin/chromium-browser
ENV CHROME_PATH=/usr/bin/chromium-browser

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code (will be overridden by volume mount)
COPY . .

# Create tmp directory for Air builds
RUN mkdir -p ./tmp

# Expose port
EXPOSE 8080

# Run Air for hot-reload
CMD ["air", "-c", ".air.toml"]
