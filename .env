# Process Manager Environment Variables Template
# Copy this file to .env and update the values for your environment

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=8080
LOG_LEVEL=info

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# MongoDB Configuration
MONGODB_URI=mongodb://admin:password@localhost:27017/process_manager?authSource=admin
# For production, use a more secure URI like:
# MONGODB_URI=mongodb://username:password@your-mongo-host:27017/process_manager?authSource=admin

# Redis Configuration
REDIS_URL=redis://localhost:6379
# For production with authentication:
# REDIS_URL=redis://username:password@your-redis-host:6379

# ============================================================================
# OBJECT STORAGE (MinIO) CONFIGURATION
# ============================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=process-documents
MINIO_USE_SSL=false

# For production MinIO:
# MINIO_ENDPOINT=your-minio-host:9000
# MINIO_ACCESS_KEY=your-production-access-key
# MINIO_SECRET_KEY=your-production-secret-key
# MINIO_USE_SSL=true

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=jwtsecret
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# SMTP Configuration for email invitations and notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@togocom.tg
SMTP_PASSWORD=your-smtp-app-password
EMAIL_FROM=Process Manager <noreply@togocom.tg>

# For other email providers:
# Gmail: smtp.gmail.com:587
# Outlook: smtp-mail.outlook.com:587
# Yahoo: smtp.mail.yahoo.com:587
# Custom SMTP: your-smtp-server.com:587

# ============================================================================
# APPLICATION URLS
# ============================================================================
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:8080

# For production:
# FRONTEND_URL=https://your-domain.com
# API_BASE_URL=https://api.your-domain.com

# ============================================================================
# PDF GENERATION
# ============================================================================
PDF_TEMPLATE_PATH=./templates/yas_template.html
COMPANY_LOGO_URL=http://localhost:9000/process-documents/templates/yas-logo.png

# ============================================================================
# FILE UPLOAD LIMITS
# ============================================================================
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=png,jpg,jpeg,pdf,svg,csv,xlsx
MAX_FILES_PER_DOCUMENT=20

# ============================================================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================================================

# Next.js Public Variables (accessible in browser)
NEXT_PUBLIC_API_URL=http://localhost:8080/api
NEXT_PUBLIC_APP_NAME=Process Manager
NEXT_PUBLIC_COMPANY_NAME=Togocom

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

# For production:
# NEXTAUTH_URL=https://your-domain.com

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Application Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Error Tracking
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ENABLE_ERROR_TRACKING=false

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Development flags
DEVELOPMENT_MODE=true
ENABLE_DEBUG_LOGGING=true
DISABLE_AUTH_FOR_TESTING=false

# API Documentation
ENABLE_SWAGGER=true
SWAGGER_UI_PATH=/docs

# ============================================================================
# PRODUCTION SECURITY
# ============================================================================

# HTTPS Configuration (Production only)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# FORCE_HTTPS=true

# Database Connection Pooling
# DB_POOL_MIN_SIZE=5
# DB_POOL_MAX_SIZE=20
# DB_CONNECTION_TIMEOUT=30s

# Session Configuration
# SESSION_TIMEOUT=1h
# MAX_CONCURRENT_SESSIONS=5

# ============================================================================
# NOTES
# ============================================================================

# 1. Never commit real secrets to version control
# 2. Use environment-specific .env files (.env.dev, .env.staging, .env.prod)
# 3. Consider using secret management services in production
# 4. Regularly rotate secrets and passwords
# 5. Use strong, unique passwords for all services
# 6. Enable SSL/TLS in production
# 7. Configure proper firewall rules
# 8. Set up monitoring and alerting
# 9. Regular backups of database and files
# 10. Keep all services updated